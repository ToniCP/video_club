<p id="notice"><%= notice %></p>
<div class="picture">
  <%= image_tag(@product.image_url) %>
  <h2>
    <strong>Title:</strong>
    <%= @product.title %>
  </h2>
  <h2>
    <strong>Date:</strong>
    <%= @product.date %>
  </h2>
  <h2>
    <strong>Price:</strong>
    <%= number_to_currency(@product.price) %>
  </h2>
  <h2>
    <strong>Description:</strong>
    <%= @product.description %>
  </h2>
</div>

<div class="field">
  <h3>Add a comment</h3>
  <%= render "second_comments/form" %>

  <h3>Comments</h3>
  <% @product.second_comments.each do |comment| %>
    <p>
      <strong>Commenter:</strong>
      <%= comment.user.email %>
    </p>

    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>
  <% end %>
</div>
